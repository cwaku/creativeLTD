<div class="container mt-5">
  <h1>Bookings</h1>
  <%= link_to 'Book Events', events_path, class: 'btn btn-primary mb-3' %>
  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Event</th>
          <th>User</th>
          <th>Status</th>
          <th>Venue</th>
          <th>Date</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @bookings.each do |booking| %>
          <tr>
            <td><%= booking.event.name %></td>
            <td><%= booking.user.name %></td>
            <td><%= booking.status %></td>
            <td><%= booking.venue.name %></td>
            <td><%= booking.date.strftime("%d %B, %Y %H:%M") %></td>
            <td>
              <%= link_to 'Show', booking_path(booking), class: 'btn btn-primary btn-sm' %>
              <%= link_to 'Edit', edit_booking_path(booking), class: 'btn btn-secondary btn-sm' %>
              <%= link_to 'Delete', booking_path(booking), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
