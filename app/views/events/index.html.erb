<div class="container mt-5">
  <h1>Events</h1>
  <%= link_to 'New Event', new_event_path, class: 'btn btn-primary mb-3' %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Date</th>
        <th>Venue</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= link_to event.name, event_path(event), class: 'text-decoration-none' %></td>
          <td><%= event.date.strftime("%d %B, %Y") %></td>
          <td><%= event.venue.name %></td>
          <td>
            <%= link_to 'Edit', edit_event_path(event), class: 'btn btn-secondary btn-sm' %>
            <%= link_to 'Delete', event_path(event), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
