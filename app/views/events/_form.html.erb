<%= form_with(model: event, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :date %>
      <%= form.datetime_select :date, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :venue_id, "Venue" %>
      <%= form.collection_select :venue_id, Venue.all, :id, :name, {}, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :user_id, "User" %>
      <%= form.collection_select :user_id, User.all, :id, :name, {}, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :equipment_ids, "Equipment" %>
      <%= form.collection_check_boxes :equipment_ids, Equipment.all, :id, :name do |b| %>
        <div class="form-check">
          <%= b.check_box(class: "form-check-input") %>
          <%= b.label(class: "form-check-label") %>
        </div>
      <% end %>
    </div>
    <%= form.submit class: 'btn btn-primary mt-3' %>
  <% end %>
  