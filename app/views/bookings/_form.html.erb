<%= form_with(model: booking, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :event_id, "Event" %>
      <%= form.collection_select :event_id, @events, :id, :name, {}, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :date %>
      <%= form.datetime_select :date, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :venue_id, "Venue" %>
      <%= form.collection_select :venue_id, @venues, :id, :name, {}, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :equipment_ids, "Equipment" %>
      <%= form.collection_check_boxes :equipment_ids, @equipments, :id, :name do |b| %>
        <div class="form-check">
          <%= b.check_box(class: "form-check-input") %>
          <%= b.label(class: "form-check-label") %>
        </div>
      <% end %>
    </div>
    <%= form.submit class: 'btn btn-primary mt-3' %>
  <% end %>
  